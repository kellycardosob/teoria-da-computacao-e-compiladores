#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int potencia(int x, int n) {
    if (n == 0) {
        return 1;
    } else {
        return x * potencia(x, n - 1);
    }
}
int main() {
    setlocale(LC_ALL, "Portuguese");
    int x, n;
    printf("Digite dois n√∫meros: ");
    scanf("%d%d", &x, &n);
    printf("%d", potencia(x, n));
    return 0;
}
